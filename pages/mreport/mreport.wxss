/* pages/mreport/mreport.wxss */
.mrBox{
  width:100%;
  /* display: table; */
  height:100vh;
  border-top:2rpx solid #DCDCDC;
}
.mrItem{
  width:698rpx;
  font-size:30rpx;
  height: 102rpx;
  border-bottom:2rpx solid #DCDCDC;
  margin:0 auto;
  display: grid;
  grid-template-columns: 66rpx auto;
  line-height: 102rpx;
}
.ovaled{
  width:36rpx;
  height: 36rpx;
  margin-top:32rpx;
}
.msarea{
  width:690rpx;
  height: 194rpx;
  margin:0 auto;
  margin-top:30rpx;
  border-radius:8rpx;
  border:2rpx solid rgba(220,220,220,1);
  padding-top:20rpx;
  padding-left:30rpx;
  box-sizing: border-box;
}
.msarea_holder{
  height:42rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(167,167,167,1);
  line-height:42rpx;
}
.ms_submit{
  width:688rpx;
  margin:0 auto;
  margin-top:30rpx;
  height:76rpx;
  background:linear-gradient(310deg,rgba(255,198,132,1) 0%,rgba(255,136,0,1) 100%);
  border-radius:8rpx;
  line-height: 76rpx;
  font-size:32rpx;
  color:#fff;
  text-align:center;
}